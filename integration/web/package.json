{
  "name": "@integration/web",
  "version": "2.0.0",
  "description": "Internal module to help test integration of Serenity/JS with web browsers",
  "author": {
    "name": "Jan Molak",
    "email": "jan.molak@smartcodeltd.co.uk",
    "url": "https://janmolak.com"
  },
  "homepage": "https://serenity-js.org",
  "license": "Apache-2.0",
  "private": true,
  "config": {
    "access": "private"
  },
  "main": "lib/index.js",
  "typings": "lib/index.d.ts",
  "keywords": [
    "serenity-js",
    "internal"
  ],
  "scripts": {
    "clean": "rimraf lib target",
    "lint": "eslint --ext ts --config ../../.eslintrc.js",
    "compile": "tsc --project tsconfig.json",
    "test": "failsafe clean test:update-serenity test:acceptance test:report",
    "test:update-serenity": "serenity-bdd update --ignoreSSL",
    "test:acceptance": "cross-env PORT=8080 start-server-and-test start http://localhost:8080 test:acceptance:run",
    "start": "node start.js",
    "test:acceptance:run": "failsafe test:acceptance:run:webdriverio test:acceptance:run:protractor",
    "test:acceptance:run:webdriverio": "nyc --report-dir='../target/coverage/integration-web-webdriverio' webdriverio-runner --spec='./spec/**/*.ts'",
    "test:acceptance:run:protractor": "nyc --report-dir='../target/coverage/integration-web-protractor' protractor-runner --specs='./spec/**/*.ts'",
    "test:debug": "protractor-runner --specs='./spec/**/Press.spec.ts'",
    "test:report": "serenity-bdd run"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/serenity-js/serenity-js.git"
  },
  "bugs": {
    "url": "https://github.com/serenity-js/serenity-js/issues"
  },
  "engines": {
    "node": "^12 || ^14 || ^16",
    "npm": "^6 || ^7"
  },
  "dependencies": {
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@serenity-js/assertions": "^2.0.0",
    "@serenity-js/core": "^2.0.0",
    "@serenity-js/mocha": "^2.0.0",
    "@serenity-js/serenity-bdd": "^2.0.0",
    "@integration/testing-tools": "2.0.0",
    "@serenity-js/web": "^2.0.0",
    "@integration/web-protractor-runner": "2.0.0",
    "@integration/web-webdriverio-runner": "2.0.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.0.0",
    "cross-env": "^7.0.3",
    "mocha": "^9.1.1",
    "npm-failsafe": "^0.4.3",
    "rimraf": "^3.0.2",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3",
    "start-server-and-test": "^1.14.0"
  }
}
